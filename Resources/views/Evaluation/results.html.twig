   |
   {{pregunta.pregunta.opcion3}}
   
   |
   {{pregunta.pregunta.respuesta}}
   |
   {{pregunta.respuesta}}
   |
   {{pregunta.valor}}
    <br/>
{% endfor %}

<br/>
<br/>
Calificacion: {{hoja.calificacion}} 
<br/>
<br/>
<a href="{{ path('evaluation_close')}}">
        Cerrar Session
</a>

{% endblock %}
